
pipeline{
  agent any

  environment {
    BRANCH_NAME = "${GIT_BRANCH}"
    SHORT_COMMIT = GIT_COMMIT.substring(0,7)
    BUILD_VERSION = "${GIT_COMMIT}"
  }

  stages {
    stage('Build') {
      when { branch 'develop' }
      steps {
        echo "=> Build Version: $BUILD_VERSION"
        echo "==> Build Service for branch: ${env.BRANCH_NAME}"
    sh 'in/jenkins/build.sh'
      }
    }
  }
  post {
    success {
      echo "==> Build Success"
    }
    failure {
      echo "==> Build Failure"
    }
  }
}
